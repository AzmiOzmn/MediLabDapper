@using MediLabDapper.Dtos.DoctorDtos
@model CreateDoctorDto
@{
    ViewData["Title"] = "CreateDoctor";
}

<h1>Yeni Doktor Ekleme</h1>

<form method="post">
    <div class="form-group">
        <label>Adı Soyadı</label>
        <input type="text" asp-for=NameSurname class="form-control" placeholder="Adı Soyadı" />
    </div>
    <div class="form-group">
        <label>Resim Url</label>
        <input type="text" asp-for=ImageUrl class="form-control" placeholder="Adı Soyadı" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for=Description class="form-control" placeholder="Adı Soyadı" />
    </div>
   <div class="form-group">
        <label>Bölüm</label>
       <select asp-for="DepartmentId" asp-items="@ViewBag.departments" class="form-control">
           <option disabled selected>Bölüm Seçiniz</option>
       </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form> 

