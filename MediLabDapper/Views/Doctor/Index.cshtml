@using MediLabDapper.Dtos.DoctorDtos
@model IEnumerable<ResultDoctorWithDepartmentDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Doktor Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Resmi</th>
        <th>Adı Soyadı</th>
        <th>Açıklama</th>
        <th>Bölüm</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th><img src="@item.ImageUrl" style="height:75px;border-radius:50%" /></th>
            <th>@item.NameSurname</th>
            <th>@item.Description</th>
            <th>@item.DepartmentName</th>
            <td>
                <a href="/Doctor/DeleteDoctor/@item.DoctorId" class="btn btn-danger">Sil</a>
                <a href="/Doctor/UpdateDoctor/@item.DoctorId" class="btn btn-danger">Güncelle</a>
            </td>
        </tr>
    }


</table>
<a href="/Doctor/CreateDoctor" class="btn btn-primary">Yeni Doktor Ekle</a>